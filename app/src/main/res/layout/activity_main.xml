<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demo.sharesdk.cn.mywing_s.MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#F8F8F8"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#20B5F3"
            android:gravity="center"
            android:text="WING-S"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="#F8F8F8"
            android:gravity="center_vertical"
            android:text="Ping参数"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F8F8F8"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_cishu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="次数"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_cishus"
                style="?android:attr/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:ems="2"
                android:gravity="right"
                android:text="5"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:paddingRight="25dip" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#F8F8F8"></View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_jiange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="间隔时间(S)"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tv_jianges"
                style="?android:attr/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:ems="2"
                android:gravity="right"
                android:text="5"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:paddingRight="25dip" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#F8F8F8"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_chaoshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="超时时间(ms)"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tv_chaoshis"
                style="?android:attr/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:ems="2"
                android:gravity="right"
                android:text="5"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:paddingRight="25dip"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#F8F8F8"></View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_baodaxiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="包大小(Byte)"
                android:textSize="15dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/tv_baodaxiaos"
                style="?android:attr/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:ems="2"
                android:gravity="right"
                android:text="5"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:paddingRight="25dip" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#F8F8F8"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="IP地址"
                android:textSize="15dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/tv_ips"
                style="?android:attr/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:ems="2"
                android:gravity="right"
                android:text="192.168.1.02"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:paddingRight="25dip"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F8F8F8"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="#F8F8F8"
            android:gravity="center_vertical"
            android:text="服务器参数"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F8F8F8"></View>

        <RelativeLayout
            android:id="@+id/rl_sheng"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_shengfen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="省份"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:background="@mipmap/cc" />

            <TextView
                android:id="@+id/tv_shengfens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView1"
                android:layout_toLeftOf="@+id/imageView1"
                android:text="省"
                android:textColor="#ADADAD"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#F8F8F8"></View>

        <RelativeLayout
            android:id="@+id/rl_city"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="城市"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:background="@mipmap/cc" />

            <TextView
                android:id="@+id/tv_citys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_toLeftOf="@+id/imageView2"
                android:text="市"
                android:textColor="#ADADAD"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#F8F8F8"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_shebei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="设备ID"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tv_shebeis"
                style="?android:attr/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:ems="2"
                android:gravity="right"
                android:text="5"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:paddingRight="25dip" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#F8F8F8"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_duankou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="端口"
                android:textSize="15dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/tv_duankous"
                style="?android:attr/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:ems="2"
                android:gravity="right"
                android:text="8888"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:paddingRight="25dip"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#F8F8F8"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_serviceip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="服务器IP"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tv_serviceips"
                style="?android:attr/textViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:ems="2"
                android:gravity="right"
                android:text="192.168.02.1"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:paddingRight="25dip" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F8F8F8"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:text="设置"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bt_circlebt"
                />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
